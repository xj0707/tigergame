            case 4:
                $id = session('tiger_uid');
                $users = Db::name('users')->where('id', $id)->find();
                $uid = $users['uid'];
                $data1 = Db::name('users')->where('msn', '0')->where('levelindex', 'like', "%$uid%")->select();
                $this->assign('data1', $data1);
